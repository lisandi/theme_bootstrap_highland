page {
	includeCSS {
		animate = EXT:theme_bootstrap_highland/Resources/Public/Stylesheets/animate.css
		custom = EXT:theme_bootstrap_highland/Resources/Public/Stylesheets/custom.css
		elements = EXT:theme_bootstrap_highland/Resources/Public/Stylesheets/elements.css
		fontawesome = EXT:theme_bootstrap_highland/Resources/Public/Contrib/font-awesome-4.3.0/css/font-awesome.css
		fontawesome {
			excludeFromConcatenation = 1
			disableCompression = 1
		}
	}
}

[globalVar = LIT:1 = {$themes.mode.isProduction}]
	page {
		includeCSS {
			fontawesome = //maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css
			fontawesome {
				external = 1
			}
		}
	}
[global]